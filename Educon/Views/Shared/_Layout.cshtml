@{
    Educon.Models.User LSignedUser = Educon.Helpers.AccountHelpers.GetSignedUser();
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Portal</title>
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.4/material.min.js"></script>
    <link rel="stylesheet" href="https://storage.googleapis.com/code.getmdl.io/1.0.4/material.indigo-pink.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="~/Content/material.min.css" rel="stylesheet" />

</head>
<body>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        @Html.Partial("_UserInfo", LSignedUser)
        <!--Page Content-->
        <main class="layoutContent mdl-layout__content">

            <div class="row">
                <div class="col-md-9">
                    @RenderBody();
                </div>
                <div class="col-md-3">
                    @Html.Partial("_Friends");
                </div>
            </div>

        </main>
    </div>

</body>
</html>
